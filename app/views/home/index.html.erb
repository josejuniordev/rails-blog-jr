<h1>JR's Blog</h1>
<p><%= link_to 'Crie um novo post', new_article_path, class: 'btn btn-default' %></p>
<h2>Confira abaixo os ultimos posts:</h2>

<ul>
	<% @articles.each do |article| %>
	<li id='post-<%= article.id %>'>
		<h3><%= article.title %></h3>
		<p><%= truncate(article.content, :length => 150) %></p>
		<p><%= link_to 'Visualizar post', '/articles/'+article.slug.to_s, class: 'btn btn-sm btn-default' %> - <%= link_to 'Editar post', '/articles/'+article.slug.to_s+'/edit', class: 'btn btn-sm btn-info' %> - <%= link_to 'Excluir post', '/articles/'+article.slug.to_s, :method => :delete, id: article.id, data: {confirm: 'EstÃ¡ certo disso?', remote: true}, class: 'btn btn-sm btn-danger' %> </p>
	</li>
	<% end %>
</ul>
