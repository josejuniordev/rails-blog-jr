<%= form_for @article, url: '/articles/'+@article.slug.to_s do |f| %>
<% if @article.errors.any? %>
<div id="error_explanation">
  <h2>
    <%= pluralize(@article.errors.count, "erro") %> impedem que este post seja salvo:
  </h2>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class='form-group'>
  <%= f.label :title, 'Título' %>
  <%= f.text_field :title, class: 'form-control' required: 'required' %>
</div>

<div class='form-group'>
  <%= f.label :content, 'Conteúdo', html: {class: ''} %>
  <%= f.text_area :content, size: '60x12', class: 'form-control' required: 'required' %>
</div>

<%= f.submit 'Salvar', class: 'btn btn-success' %>

<% end %>
